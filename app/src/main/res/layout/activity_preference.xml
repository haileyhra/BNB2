<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".preference">


    <!-- Choose 3 of your favourite cusines -->
    <TextView
    android:id="@+id/choose_3"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="32dp"
    android:layout_marginLeft="32dp"
    android:layout_marginTop="40dp"
    android:layout_marginEnd="32dp"
    android:layout_marginRight="32dp"
    android:gravity="center_horizontal|center_vertical"
    android:text="Choose 3 of your \nfavourite cusines"
    android:textColor="#000000"
    android:textSize="20sp"
    android:textStyle="bold"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.496"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

    <!-- Checkbox -->
    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="372dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="24dp"
        android:button="@null"
        android:drawableRight="@drawable/checkbox"
        android:text="Local"
        android:textAppearance="@style/checkboxText"
        android:textColor="#000000"
        android:textColorLink="#3F51B5"
        android:theme="@style/checkboxStyle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/choose_3" />

    <CheckBox
        android:id="@+id/checkBox2"
        android:layout_width="372dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="24dp"
        android:button="@null"
        android:drawableRight="@drawable/checkbox"
        android:text="Japanese"
        android:textAppearance="@style/checkboxText"
        android:textColor="#000000"
        android:textColorLink="#3F51B5"
        android:theme="@style/checkboxStyle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/checkBox" />

    <CheckBox
        android:id="@+id/checkBox3"
        android:layout_width="372dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="24dp"
        android:button="@null"
        android:drawableRight="@drawable/checkbox"
        android:text="Korean"
        android:textAppearance="@style/checkboxText"
        android:textColor="#000000"
        android:textColorLink="#3F51B5"
        android:theme="@style/checkboxStyle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/checkBox2" />

    <CheckBox
        android:id="@+id/checkBox4"
        android:layout_width="372dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="24dp"
        android:button="@null"
        android:drawableRight="@drawable/checkbox"
        android:text="Western"
        android:textAppearance="@style/checkboxText"
        android:textColor="#000000"
        android:textColorLink="#3F51B5"
        android:theme="@style/checkboxStyle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/checkBox3" />

    <CheckBox
        android:id="@+id/checkBox5"
        android:layout_width="372dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="24dp"
        android:button="@null"
        android:drawableRight="@drawable/checkbox"
        android:text="Chinese"
        android:textAppearance="@style/checkboxText"
        android:textColor="#000000"
        android:textColorLink="#3F51B5"
        android:theme="@style/checkboxStyle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/checkBox4" />

    <CheckBox
        android:id="@+id/checkBox6"
        android:layout_width="372dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="24dp"
        android:button="@null"
        android:drawableRight="@drawable/checkbox"
        android:text="Dessert"
        android:textAppearance="@style/checkboxText"
        android:textColor="#000000"
        android:textColorLink="#3F51B5"
        android:theme="@style/checkboxStyle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/checkBox5" />

    <!-- Button -->
    <TextView
        android:id="@+id/chooseforme"
        android:layout_width="312dp"
        android:layout_height="64dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/oval"
        android:elevation="0dp"
        android:gravity="center"
        android:textAlignment="textStart"
        android:text="Continue"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/menu_button"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Menu button -->
    <ImageView
        android:id="@+id/menu_button"
        android:src="@drawable/ic_navigation_menu"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>